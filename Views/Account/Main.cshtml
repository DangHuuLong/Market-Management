    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const columns = document.querySelectorAll('.feature-column');
            const expandedContainer = document.querySelector('.expanded-view-container');
            const expandedContent = document.querySelector('.expanded-view-content');
            const closeBtn = document.querySelector('.close-btn');
            let expandedColumn = null;

            columns.forEach((column, index) => {
                column.addEventListener('mouseenter', function() {
                    if (!expandedColumn) {
                        columns.forEach(otherColumn => {
                            if(otherColumn !== column) {
                                otherColumn.classList.add('not-hovered');
                            }
                        });
                    }
                });

                column.addEventListener('mouseleave', function() {
                    if (!expandedColumn) {
                        columns.forEach(otherColumn => {
                            otherColumn.classList.remove('not-hovered');
                        });
                    }
                });

                column.addEventListener('click', function() {
                    expandedContent.innerHTML = '';

                    const header = column.querySelector('.expanded-header').cloneNode(true);
                    const content = column.querySelector('.expanded-content').cloneNode(true);

                    header.style.display = 'block';
                    content.style.display = 'flex';

                    expandedContent.appendChild(header);
                    expandedContent.appendChild(content);

                    expandedContainer.style.display = 'block';
                    expandedColumn = column;
                });
            });

            closeBtn.addEventListener('click', function() {
                expandedContainer.style.display = 'none';
                expandedColumn = null;
            });

            function equalizeColumnHeights() {
                let maxHeight = 0;
                columns.forEach(column => {
                    const height = column.scrollHeight;
                    if (height > maxHeight) {
                        maxHeight = height;
                    }
                });

                columns.forEach(column => {
                    column.style.height = (maxHeight * 1.5) + 'px';
                });
            }

            equalizeColumnHeights();
            window.addEventListener('resize', equalizeColumnHeights);
        });
    </script>

    <script>
        const messages = [
            "Welcome to",
            "Organic Grogery Shopping Online"
        ];

        const talkElement = document.querySelector('.talkbycoconut');
        let currentIndex = 0;

        function typeWriter(text, element, speed = 50) {
            let i = 0;
            element.textContent = ''; // Xóa nội dung cũ
            element.style.borderRight = '2px solid white'; // Hiển thị con trỏ

            function typing() {
                if (i < text.length) {
                    element.textContent += text.charAt(i);
                    i++;
                    setTimeout(typing, speed);
                } else {
                    // Khi hoàn thành, giữ con trỏ nhấp nháy 1 lúc
                    setTimeout(() => {
                        element.style.borderRight = 'none';
                        // Chuyển sang message tiếp theo sau khi hiển thị đủ lâu
                        setTimeout(changeMessage, 500);
                    }, 500);
                }
            }

            typing();
        }

        function changeMessage() {
            currentIndex = (currentIndex + 1) % messages.length;
            typeWriter(messages[currentIndex], talkElement);
        }

        // Bắt đầu hiệu ứng
        typeWriter(messages[currentIndex], talkElement);
