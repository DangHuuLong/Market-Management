@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organic Grocery</title>

    <!-- Link CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Google Fonts for professional typography -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, rgba(27, 94, 32, 0.1), rgba(76, 175, 80, 0.1));
            overflow-x: hidden;
        }

        .container-fluid {
            min-height: 100vh;
        }

        .signin-container {
            padding: 2rem;
            background: rgba(255, 255, 255, 0.95);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

            .signin-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('https://www.transparenttextures.com/patterns/food.png') repeat;
                opacity: 0.05;
                z-index: 0;
            }

        .signin-title {
            font-size: 64px;
            font-weight: 700;
            color: #1b5e20;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 8px;
            animation: fadeIn 1s ease-in;
            background: linear-gradient(45deg, #4caf50, #ab47bc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-floating input {
            border: 1px solid rgba(76, 175, 80, 0.4);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
            padding: 1rem;
        }

            .form-floating input:focus {
                border-color: #4caf50;
                box-shadow: 0 0 8px rgba(76, 175, 80, 0.3);
                background: rgba(255, 255, 255, 1);
            }

        .form-floating label {
            color: #388e3c;
            font-weight: 500;
            padding-left: 1.5rem;
        }

        .btn-signin {
            background: linear-gradient(45deg, #1b5e20, #4caf50);
            color: white;
            font-weight: 600;
            border-radius: 8px;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

            .btn-signin:hover {
                background: linear-gradient(45deg, #4caf50, #ab47bc);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

            .btn-signin.disabled {
                background: rgba(108, 117, 125, 0.7);
                cursor: not-allowed;
                opacity: 0.65;
            }

        .right-panel {
            background: url('~/img/organic-grocery-bg.jpg') no-repeat center/cover;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

            .right-panel::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(27, 94, 32, 0.4);
                z-index: 1;
            }

        /* Decorative Elements */
        .decorative-orchid {
            position: absolute;
            font-size: 2.5rem;
            color: rgba(171, 71, 188, 0.3);
            animation: sway 6s ease-in-out infinite;
            z-index: 1;
        }

        .orchid-top-left {
            top: 20px;
            left: 20px;
            transform: rotate(-20deg);
        }

        .orchid-bottom-right {
            bottom: 20px;
            right: 20px;
            transform: rotate(20deg);
        }

        /* Welcome Section Styling */
        .welcome-container {
            position: relative;
            z-index: 2;
        }

        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .features-container {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            padding: 20px 30px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        @@keyframes sway {
            0%, 100% {
                transform: translateY(0) rotate(-20deg);
            }

            50% {
                transform: translateY(15px) rotate(-10deg);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Social Buttons */
        .btn-outline-secondary {
            border-color: rgba(76, 175, 80, 0.5);
            color: #4caf50;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background: rgba(171, 71, 188, 0.1);
                color: #ab47bc;
                transform: scale(1.1);
            }

        /* Links and HR */
        .text-success {
            color: #4caf50 !important;
        }

            .text-success:hover {
                color: #ab47bc !important;
            }

        hr {
            border-color: rgba(76, 175, 80, 0.3);
        }

        /* Back to Home Button */
        .btn-light {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(76, 175, 80, 0.5);
            color: #4caf50;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-light:hover {
                background: rgba(171, 71, 188, 0.1);
                color: #ab47bc;
            }

        /* Responsive Styles */
        @@media (max-width: 991.98px) {
            .signin-title {
                font-size: 48px;
                letter-spacing: 6px;
            }

            .right-panel {
                min-height: 50vh;
            }
        }

        @@media (max-width: 767.98px) {
            .signin-title {
                font-size: 36px;
                letter-spacing: 4px;
            }

            .signin-container {
                padding: 1rem;
            }

            .right-panel {
                display: none;
            }

            .decorative-orchid {
                font-size: 2rem;
            }
        }

        @@media (max-width: 575.98px) {
            .signin-title {
                font-size: 30px;
                letter-spacing: 2px;
            }
        }
    </style>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sign In Form Section -->
            <div class="col-lg-5 col-md-7 col-sm-12">
                <div class="signin-container">
                    <i class="bi bi-flower2 decorative-orchid orchid-top-left"></i>
                    <i class="bi bi-flower2 decorative-orchid orchid-bottom-right"></i>
                    <div class="w-100 px-md-4 position-relative">
                        <p class="text-center mb-4 signin-title">
                            SIGN IN
                        </p>

                        <form asp-action="SignIn" method="post" id="loginForm">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" name="Username" placeholder="User Name" required>
                                <label for="floatingInput"><i class="bi bi-person-fill me-2"></i>User Name</label>
                            </div>

                            <div class="form-floating mb-3 position-relative">
                                <input type="password" class="form-control" id="floatingPassword" name="PassWord" placeholder="Password" required>
                                <label for="floatingPassword"><i class="bi bi-lock-fill me-2"></i>Password</label>
                                <i class="bi bi-eye-fill position-absolute end-0 top-50 translate-middle-y me-3" id="togglePassword" style="cursor: pointer;"></i>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                                <a asp-controller="Account" asp-action="SendCode" class="text-decoration-none text-success">Forgot password?</a>
                            </div>

                            <button type="submit" id="signInBtn" class="btn btn-signin w-100 mb-3 py-2 disabled">
                                SIGN IN
                            </button>
                        </form>

                        <div class="text-center">
                            <a asp-controller="Account" asp-action="Main" class="text-decoration-none text-success"><i class="bi bi-arrow-bar-left"></i></a>
                            Don't have an account?
                            <a asp-controller="Account" asp-action="SignUp" class="text-success text-decoration-underline">Sign up now</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right side image panel - hidden on mobile -->
            <div class="col-lg-7 col-md-5 d-none d-md-block right-panel">
                <div class="welcome-container position-relative z-index-2 d-flex flex-column justify-content-center align-items-center h-100 text-white px-5">
                    <h1 class="display-3 fw-bold mb-4 text-center text-shadow">Welcome to<br>Organic Grocery</h1>
                    <p class="lead mb-4 text-center text-shadow">Your source for fresh, organic produce and sustainable goods.</p>

                    <div class="features-container my-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                            <span class="fs-5">100% Organic Certified Products</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-truck fs-4 me-3"></i>
                            <span class="fs-5">Fast & Free Delivery</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-check fs-4 me-3"></i>
                            <span class="fs-5">Sustainable Packaging</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Home button for mobile -->
    <div class="position-fixed top-0 start-0 m-3 d-md-none">
        <a href="/" class="btn btn-light">
            <i class="bi bi-house-fill"></i>
        </a>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Script toggle password và xử lý form -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const usernameInput = document.getElementById('floatingInput');
            const passwordInput = document.getElementById('floatingPassword');
            const signInBtn = document.getElementById('signInBtn');
            const togglePassword = document.getElementById('togglePassword');

            usernameInput.focus();

            togglePassword.addEventListener('click', function() {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    togglePassword.classList.replace('bi-eye-fill', 'bi-eye-slash-fill');
                } else {
                    passwordInput.type = 'password';
                    togglePassword.classList.replace('bi-eye-slash-fill', 'bi-eye-fill');
                }
            });

            function checkInputs() {
                const usernameValid = usernameInput.value.trim() !== '';
                const passwordValid = passwordInput.value.trim() !== '';

                if (usernameValid && passwordValid) {
                    signInBtn.classList.remove('disabled');
                } else {
                    signInBtn.classList.add('disabled');
                }
            }

            usernameInput.addEventListener('keydown', function(event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    passwordInput.focus();
                }
            });

            passwordInput.addEventListener('keydown', function(event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    if (usernameInput.value.trim() !== '' && passwordInput.value.trim() !== '') {
                        loginForm.submit();
                    }
                }
            });

            usernameInput.addEventListener('input', checkInputs);
            passwordInput.addEventListener('input', checkInputs);

            checkInputs();
        });
    </script>
</body>
</html>