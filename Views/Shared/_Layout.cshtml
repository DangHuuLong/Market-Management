@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organic Grocery</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="../css/site.css" rel="stylesheet" />
    <style>
        /* Common styles */
        body {
            overflow-x: hidden;
        }

        /* Custom styles for responsiveness */

        /* Desktop view - original layout preserved */
        .desktop-header {
            display: block;
        }

        .tablet-header, .mobile-header {
            display: none;
        }

        .nav-main a {
            color: #314401;
            text-decoration: none;
            font-weight: bold;
            padding: 8px 15px;
        }

            .nav-main a:hover {
                background-color: rgba(109, 123, 48, 0.1);
                border-radius: 4px;
            }

        .nav-icon {
            color: #314401;
        }

        /* Tablet view (768px - 991px) */
        @@media (max-width: 991px) {
            .desktop-header {
                display: none;
            }

            .tablet-header {
                display: block;
            }

            .mobile-header {
                display: none;
            }

            .tablet-nav {
                background-color: #f8f9fa;
                border-radius: 5px;
                padding: 10px;
                margin: 10px 0;
            }

                .tablet-nav a {
                    color: #314401;
                    text-decoration: none;
                    font-weight: bold;
                    padding: 8px 15px;
                    display: inline-block;
                }

            .tablet-search-bar {
                margin: 10px 0;
            }

            .tablet-brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: #314401;
                display: block;
                text-align: center;
                margin: 10px 0;
            }
        }

        /* Mobile view (up to 767px) */
        @@media (max-width: 767px) {
            .desktop-header, .tablet-header {
                display: none;
            }

            .mobile-header {
                display: block;
            }

            .mobile-brand {
                font-size: 1.2rem;
                font-weight: bold;
                color: #314401;
                text-align: center;
                padding: 10px 0;
            }

            .mobile-nav-container {
                padding: 0;
            }

            .offcanvas-header {
                background-color: #D9C2A8;
            }

            .mobile-nav-link {
                display: block;
                padding: 12px 15px;
                border-bottom: 1px solid #e9ecef;
                color: #314401;
                text-decoration: none;
                font-weight: bold;
            }

                .mobile-nav-link:hover {
                    background-color: rgba(109, 123, 48, 0.1);
                }

            .mobile-icons {
                display: flex;
                justify-content: space-between;
                padding: 10px 15px;
                background-color: #f8f9fa;
            }

                .mobile-icons a {
                    color: #314401;
                    font-size: 1.2rem;
                    position: relative;
                }

            .mobile-cart-badge {
                position: absolute;
                top: -8px;
                right: -8px;
                font-size: 10px;
            }
        }

        /* Footer responsiveness */
        @@media (max-width: 991px) {
            footer .col-3 {
                width: 50%;
                flex: 0 0 50%;
                max-width: 50%;
                margin-bottom: 20px;
            }
        }

        @@media (max-width: 767px) {
            footer .col-3 {
                width: 100%;
                flex: 0 0 100%;
                max-width: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    @{
        // Lấy số lượng sản phẩm trong giỏ hàng từ session
        var cartItemCount = HttpContextAccessor.HttpContext.Session.GetInt32("CartItemCount") ?? 0;
    }

    <!-- Desktop Header (original layout) -->
    <header class="desktop-header">
        <div class="row">
            <!--Logo-->
            <div class="col-1">
                <img src="~/img/Organic Grocery.png" class="img-fluid" />
            </div>

            <!--Empty-->
            <div class="col-1">
            </div>

            <!--Navigation and Search-->
            <div class="col-8 d-flex flex-column justify-content-evenly">
                <!--Navigation-->
                <div class="d-flex justify-content-evenly align-items-center nav-main" style="flex: 1; font-weight: bold; color: white;">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Home
                    </a>
                    <a asp-controller="Home" asp-action="AboutUs"><i class="bi bi-info-circle"></i> About Us</a>
                    <a asp-controller="Order" asp-action="Index"><i class="fa-solid fa-box"></i> Order</a>
                    <a asp-controller="Home" asp-action="ShoppingCart" id="cart-icon" style="position: relative;">
                        <i class="bi bi-cart"></i> Cart
                        <span id="cart-count" class="badge rounded-pill bg-danger" style="position: absolute; top: -5px; right: -5px; font-size: 10px;">@cartItemCount</span>
                    </a>
                    <a asp-controller="Home" asp-action="Support"> <i class="bi bi-headset"></i> Support</a>
                </div>

                <!--Search-->
                @* <div class="input-group d-flex justify-content-evenly align-items-center" style="flex: 1; "> *@
                @*     <input type="text" class="form-control custom-search-input" placeholder="Search..." *@
                @*            style="background-color: white; border: 1px solid #6D7B30; color: #333;"> *@
                @*     <button class="btn custom-search-btn" type="button" *@
                @*             style="background-color: white; border: 1px solid #6D7B30; color: #333;"> *@
                @*         <i class="bi bi-search"></i> *@
                @*     </button> *@
                @* </div> *@
            </div>

            <!--Translate,Account and Notification-->
            <div class="col-2 d-flex flex-column justify-content-evenly">
                <!--Translate-->
                <div class="dropdown d-flex justify-content-evenly align-items-center custom-dropdown" style="flex: 1;">
                    <button class="btn dropdown-toggle custom-dropdown-toggle border-0 w-100" type="button" data-bs-toggle="dropdown">
                        Choose Language
                    </button>
                    <ul class="dropdown-menu custom-dropdown-menu w-100">
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('vi')">Tiếng Việt</a></li>
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('en')">English</a></li>
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('fr')">Français</a></li>
                        <li><a class="dropdown-item custom-dropdown-item" href="#" onclick="changeLanguage('de')">Deutsch</a></li>
                    </ul>
                </div>

                <!--Account and Notification-->
                <div class="d-flex justify-content-evenly align-items-center" style="flex: 1;">
                    <a asp-controller="Profile" asp-action="Index" style="height: 100%; display: flex; align-items: center;">
                        <i class="bi bi-person-circle nav-icon" style="font-size: 1.5rem;"></i>
                    </a>
                    <a href="#" style="height: 100%; display: flex; align-items: center;">
                        <i class="bi bi-bell-fill nav-icon" style="font-size: 1.5rem;"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Tablet Header (768px - 991px) -->
    <header class="tablet-header container">
        <div class="row">
            <div class="col-12 tablet-brand text-center">
                Organic Grocery Shopping Online
            </div>

            <div class="col-12 tablet-search-bar">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search...">
                    <button class="btn btn-outline-success" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>

            <div class="col-12 tablet-nav text-center">
                <a asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Home
                </a>
                <a asp-controller="Home" asp-action="AboutUs">
                    <i class="bi bi-info-circle"></i> About
                </a>
                <a asp-controller="Order" asp-action="Index">
                    <i class="fa-solid fa-box"></i> Order
                </a>
                <a asp-controller="Home" asp-action="ShoppingCart" style="position: relative;">
                    <i class="bi bi-cart"></i> Cart
                    <span id="tablet-cart-count" class="badge rounded-pill bg-danger" style="position: absolute; top: -5px; right: -5px; font-size: 10px;">@cartItemCount</span>
                </a>
                <a asp-controller="Home" asp-action="Support">
                    <i class="bi bi-headset"></i> Support
                </a>
            </div>

            <div class="col-12 d-flex justify-content-center mt-2">
                <div class="dropdown mx-2">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-globe"></i> Language
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('vi')">Tiếng Việt</a></li>
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('en')">English</a></li>
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('fr')">Français</a></li>
                        <li><a class="dropdown-item" href="#" onclick="changeLanguage('de')">Deutsch</a></li>
                    </ul>
                </div>

                <a asp-controller="Profile" asp-action="Index" class="mx-2">
                    <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
                </a>
                <a href="#" class="mx-2">
                    <i class="bi bi-bell-fill" style="font-size: 1.5rem;"></i>
                </a>
            </div>
        </div>
    </header>

    <!-- Mobile Header (up to 767px) -->
    <header class="mobile-header">
        <div class="mobile-brand">
            Organic Grocery Shopping Online
        </div>

        <div class="mobile-icons">
            <button class="btn p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>

            <div>
                <a asp-controller="Home" asp-action="ShoppingCart" class="mx-2" style="position: relative;">
                    <i class="bi bi-cart"></i>
                    <span id="mobile-cart-count" class="badge rounded-pill bg-danger mobile-cart-badge">@cartItemCount</span>
                </a>
                <a asp-controller="Profile" asp-action="Index" class="mx-2">
                    <i class="bi bi-person-circle"></i>
                </a>
                <a href="#" class="mx-2">
                    <i class="bi bi-bell-fill"></i>
                </a>
            </div>
        </div>

        <!-- Mobile menu offcanvas -->
        <div class="offcanvas offcanvas-start" id="mobileMenu">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title">Organic Grocery</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body p-0">
                <div class="p-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search...">
                        <button class="btn btn-outline-success" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>

                <a class="mobile-nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Home
                </a>
                <a class="mobile-nav-link" asp-controller="Home" asp-action="AboutUs">
                    <i class="bi bi-info-circle"></i> About Us
                </a>
                <a class="mobile-nav-link" asp-controller="Order" asp-action="Index">
                    <i class="fa-solid fa-box"></i> Order
                </a>
                <a class="mobile-nav-link" asp-controller="Home" asp-action="ShoppingCart">
                    <i class="bi bi-cart"></i> Cart
                </a>
                <a class="mobile-nav-link" asp-controller="Home" asp-action="Support">
                    <i class="bi bi-headset"></i> Support
                </a>
                <a class="mobile-nav-link" asp-controller="Profile" asp-action="Index">
                    <i class="bi bi-person-circle"></i> My Profile
                </a>

                <div class="mobile-nav-link">
                    <i class="bi bi-globe"></i> Language
                    <div class="mt-2">
                        <button class="btn btn-sm btn-outline-secondary me-1" onclick="changeLanguage('vi')">VI</button>
                        <button class="btn btn-sm btn-outline-secondary me-1" onclick="changeLanguage('en')">EN</button>
                        <button class="btn btn-sm btn-outline-secondary me-1" onclick="changeLanguage('fr')">FR</button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="changeLanguage('de')">DE</button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid mb-lg-5 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!--Footer-->
    <footer class="footer row" style="background-color: #D9C2A8; padding: 20px;">
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px; ">Organic Grocery</p>
                <p style="font-weight:bold; font-size:10px;">Bringing Nature to Your Table</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-geo-alt-fill"></i>54 Nguyễn Lương Bằng</p>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px; ">Quick Links</p>
                <p style="font-weight: bold; font-size: 10px; text-decoration: underline;">Home</p>
                <p style="font-weight: bold; font-size: 10px; text-decoration: underline;">Shopping Cart</p>
                <p style="font-weight: bold; font-size: 10px; text-decoration: underline;">Manage Order</p>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px; ">Customer Support</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-telephone-fill"></i> +84 123 456 789</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-envelope-fill"></i> organicgrocery@gmail.com</p>
                <p style="font-weight:bold; font-size:10px;"><i class="bi bi-clock-fill"></i> 6:00 AM - 12:00 PM</p>
            </div>
        </div>
        <div class="col-3 d-flex justify-content-center">
            <div>
                <p style="color: #314401; font-weight: bold; font-size: 18px;">Follow Us</p>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/facebook.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/youtube.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/twitter.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
                <a style="font-weight: bold; font-size: 10px; display: flex; align-items: center; margin-bottom: 10px;">
                    <img src="../img/instagram.png" style="width: 14px; height: 14px; margin-right: 5px;" /> organicgrocery
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Link JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/fnqjnwdxvb57lyzscn93eqgyze1znicr3jsf44c5p9p7y86w/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>