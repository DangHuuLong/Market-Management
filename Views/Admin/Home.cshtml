@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center">
            <h1 class="display-4" style="color: #333333; font-weight: bold;">Welcome to Organic Grocery!</h1>
            <p class="lead" style="color: #2E8B57;">You have successfully logged into the admin system.</p>
            <hr class="my-4" style="border-color: #A7D7A9;">
            <p style="color: #555555;">This is the admin dashboard. From here, you can manage categories, products, orders, customers, discounts, revenue, and more to efficiently run your store.</p>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Dashboard")" role="button">Explore Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Quick Links Section -->
    <div class="row mt-3">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="border: none; background-color: #F0F7F0;">
                <div class="card-body text-center">
                    <i class="fas fa-th-large fa-2x mb-3" style="color: #2E8B57;"></i>
                    <h5 class="card-title" style="color: #333333;">Manage Categories</h5>
                    <p class="card-text" style="color: #555555;">Add, edit, or delete product categories.</p>
                    <a href="@Url.Action("Category", "Admin")" class="btn btn-outline-primary btn-sm" style="border-color: #2E8B57; color: #2E8B57;">View Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="border: none; background-color: #F0F7F0;">
                <div class="card-body text-center">
                    <i class="bi bi-box fa-2x mb-3" style="color: #2E8B57;"></i>
                    <h5 class="card-title" style="color: #333333;">Manage Products</h5>
                    <p class="card-text" style="color: #555555;">Update product details and inventory.</p>
                    <a href="@Url.Action("Product", "Admin")" class="btn btn-outline-primary btn-sm" style="border-color: #2E8B57; color: #2E8B57;">View Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="border: none; background-color: #F0F7F0;">
                <div class="card-body text-center">
                    <i class="fa-solid fa-clipboard-list fa-2x mb-3" style="color: #2E8B57;"></i>
                    <h5 class="card-title" style="color: #333333;">Manage Orders</h5>
                    <p class="card-text" style="color: #555555;">Track and process customer orders.</p>
                    <a href="@Url.Action("Order", "Admin")" class="btn btn-outline-primary btn-sm" style="border-color: #2E8B57; color: #2E8B57;">View Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="border: none; background-color: #F0F7F0;">
                <div class="card-body text-center">
                    <i class="fa-solid fa-user fa-2x mb-3" style="color: #2E8B57;"></i>
                    <h5 class="card-title" style="color: #333333;">Manage Customers</h5>
                    <p class="card-text" style="color: #555555;">View and manage customer information.</p>
                    <a href="@Url.Action("Customer", "Admin")" class="btn btn-outline-primary btn-sm" style="border-color: #2E8B57; color: #2E8B57;">View Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="border: none; background-color: #F0F7F0;">
                <div class="card-body text-center">
                    <i class="fa-solid fa-percent fa-2x mb-3" style="color: #2E8B57;"></i>
                    <h5 class="card-title" style="color: #333333;">Manage Discounts</h5>
                    <p class="card-text" style="color: #555555;">Create and manage discount campaigns.</p>
                    <a href="@Url.Action("Discount", "Admin")" class="btn btn-outline-primary btn-sm" style="border-color: #2E8B57; color: #2E8B57;">View Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm" style="border: none; background-color: #F0F7F0;">
                <div class="card-body text-center">
                    <i class="fa-solid fa-chart-simple fa-2x mb-3" style="color: #2E8B57;"></i>
                    <h5 class="card-title" style="color: #333333;">View Revenue</h5>
                    <p class="card-text" style="color: #555555;">Analyze sales and revenue reports.</p>
                    <a href="@Url.Action("Revenue", "Admin")" class="btn btn-outline-primary btn-sm" style="border-color: #2E8B57; color: #2E8B57;">View Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #2E8B57;
        border-color: #2E8B57;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #1e7d45;
        border-color: #1e7d45;
    }

    .btn-outline-primary:hover {
        background-color: #A7D7A9;
        color: #333333;
        border-color: #A7D7A9;
    }

    .card {
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    hr {
        width: 50%;
        margin: 2rem auto;
    }
</style>